<Page
    mc:Ignorable="d"
    x:Class="PaimonTray.Views.AddAccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:av="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:PaimonTray.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ActualThemeChanged="AddAccountPage_OnActualThemeChanged">
    <!-- The root grid. -->
    <Grid>
        <!-- The body grid. -->
        <Grid
            Grid.Row="0"
            Padding="12"
            RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- The title text block. -->
            <TextBlock
                x:Name="TextBlockTitle"
                Grid.Row="0"
                Style="{ThemeResource TitleTextBlockStyle}" />
            <!-- The content grid. -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- The server grid. -->
                <Grid
                    Background="{ThemeResource ExpanderHeaderBackground}"
                    BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}"
                    BorderThickness="{ThemeResource ExpanderHeaderBorderThickness}"
                    ColumnSpacing="32"
                    CornerRadius="4, 4, 0, 0"
                    Grid.Row="0"
                    Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Column="0"
                        VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="TextBlockServer"
                            Grid.Row="0"
                            TextWrapping="WrapWholeWords" />
                        <TextBlock
                            x:Name="TextBlockServerExplanation"
                            Foreground="{ThemeResource SystemBaseMediumColor}"
                            Grid.Row="1"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            TextWrapping="WrapWholeWords" />
                    </Grid>
                    <ComboBox
                        x:Name="ComboBoxServer"
                        Grid.Column="1"
                        SelectionChanged="ComboBoxServer_OnSelectionChanged"
                        VerticalAlignment="Center">
                        <ComboBoxItem
                            x:Name="ComboBoxItemServerCn"
                            Loaded="ComboBoxItemServer_OnLoaded"
                            Tag="{x:Bind h:AccountsHelper.TagServerCn}" />
                        <ComboBoxItem
                            x:Name="ComboBoxItemServerGlobal"
                            Loaded="ComboBoxItemServer_OnLoaded"
                            Tag="{x:Bind h:AccountsHelper.TagServerGlobal}" />
                    </ComboBox>
                </Grid>
                <!-- The container grid for the login section. -->
                <Grid
                    Background="{ThemeResource ExpanderContentBackground}"
                    BorderBrush="{ThemeResource ExpanderContentBorderBrush}"
                    BorderThickness="{ThemeResource ExpanderContentDownBorderThickness}"
                    CornerRadius="0, 0, 4, 4"
                    Grid.Row="1">
                    <!-- The login scroll viewer. -->
                    <ScrollViewer
                        Padding="12"
                        VerticalScrollBarVisibility="Auto">
                        <!-- The login grid. -->
                        <Grid
                            x:Name="GridLogin"
                            ColumnSpacing="12"
                            RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <!-- The info bar for indicating of automatically using the alternative login method. -->
                                <InfoBar
                                    x:Name="InfoBarLoginAlternativeAutomatically"
                                    Closing="InfoBar_OnClosing"
                                    Severity="Warning">
                                    <InfoBar.ActionButton>
                                        <HyperlinkButton
                                            x:Name="HyperlinkButtonWebView2RuntimeDownload"
                                            Grid.Column="1"
                                            NavigateUri="{x:Bind h:AppConstantsHelper.UrlWebView2Runtime}" />
                                    </InfoBar.ActionButton>
                                </InfoBar>
                                <!-- The login info bar. -->
                                <InfoBar
                                    x:Name="InfoBarLogin"
                                    Closing="InfoBar_OnClosing" />
                                <!-- The login header grid. -->
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                        <TextBlock x:Name="TextBlockLoginHeaderWebPage" />
                                        <TextBlock
                                            x:Name="TextBlockLoginHeaderAlternative"
                                            Visibility="Collapsed">
                                            <Run x:Name="RunLoginHeaderEnter" />
                                            <Hyperlink x:Name="HyperlinkLoginHeaderPlace">
                                                <Run x:Name="RunLoginHeaderPlace" />
                                            </Hyperlink>
                                            <Run x:Name="RunLoginHeaderCookies" />
                                        </TextBlock>
                                    </StackPanel>
                                    <Button
                                        x:Name="ButtonLoginAssist"
                                        Click="ButtonLoginAssist_OnClick"
                                        Grid.Column="1"
                                        Padding="4">
                                        <FontIcon
                                            x:Name="FontIconLoginAssist"
                                            FontSize="{ThemeResource ToolTipContentThemeFontSize}" />
                                    </Button>
                                    <Button
                                        x:Name="ButtonLoginCompleteConfirm"
                                        Click="ButtonLoginCompleteConfirm_OnClick"
                                        Grid.Column="2"
                                        Height="22"
                                        HorizontalAlignment="Right"
                                        IsEnabled="False"
                                        Margin="8, 0, 0, 0"
                                        Padding="0"
                                        Style="{ThemeResource AccentButtonStyle}"
                                        Visibility="Collapsed"
                                        Width="22">
                                        <AnimatedIcon x:Name="AnimatedIconLoginCompleteConfirm">
                                            <AnimatedIcon.FallbackIconSource>
                                                <FontIconSource
                                                    FontSize="{ThemeResource ToolTipContentThemeFontSize}"
                                                    Glyph="{x:Bind h:AppConstantsHelper.GlyphAccept}" />
                                            </AnimatedIcon.FallbackIconSource>
                                            <AnimatedIcon.Source>
                                                <av:AnimatedAcceptVisualSource />
                                            </AnimatedIcon.Source>
                                        </AnimatedIcon>
                                    </Button>
                                </Grid>
                            </StackPanel>
                            <!-- The alternative login grid. -->
                            <Grid
                                x:Name="GridLoginAlternative"
                                Grid.Row="1"
                                RowSpacing="8"
                                Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBox
                                    x:Name="TextBoxLoginAlternative"
                                    Grid.Row="0"
                                    IsSpellCheckEnabled="False"
                                    MinHeight="48"
                                    TextChanged="TextBoxLoginAlternative_OnTextChanged"
                                    TextWrapping="Wrap" />
                                <Grid
                                    ColumnSpacing="8"
                                    Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        x:Name="ButtonLoginAlternative"
                                        Click="ButtonLoginAlternative_OnClick"
                                        Grid.Column="0"
                                        HorizontalAlignment="Stretch"
                                        IsEnabled="False"
                                        Style="{ThemeResource AccentButtonStyle}" />
                                    <Button
                                        x:Name="ButtonLoginAlternativeClear"
                                        Click="ButtonLoginAlternativeClear_OnClick"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        IsEnabled="False" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
        <!-- The busy indicator grid. -->
        <Grid
            x:Name="GridBusyIndicator"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            Grid.Row="0"
            Visibility="Collapsed">
            <Grid
                ColumnSpacing="12"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ProgressRing
                    Grid.Column="0"
                    IsActive="True" />
                <TextBlock
                    x:Name="TextBlockBusyIndicator"
                    Grid.Column="1"
                    VerticalAlignment="Center" />
            </Grid>
        </Grid>
    </Grid>
</Page>