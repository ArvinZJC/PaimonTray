<Page
    mc:Ignorable="d"
    x:Class="PaimonTray.Views.GeneralSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:PaimonTray.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowSpacing="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Expander
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left">
            <Expander.Content>
                <StackPanel>
                    <RadioButton
                        x:Name="RadioButtonThemeSystem"
                        Checked="RadioButtonsTheme_Checked"
                        Content="Use system setting"
                        Tag="{x:Bind h:SettingsHelper.TagThemeSystem}" />
                    <RadioButton
                        x:Name="RadioButtonThemeLight"
                        Checked="RadioButtonsTheme_Checked"
                        Content="Light"
                        Tag="{x:Bind h:SettingsHelper.TagThemeLight}" />
                    <RadioButton
                        x:Name="RadioButtonThemeDark"
                        Checked="RadioButtonsTheme_Checked"
                        Content="Dark"
                        Tag="{x:Bind h:SettingsHelper.TagThemeDark}" />
                </StackPanel>
            </Expander.Content>
            <Expander.Header>
                <RelativePanel Padding="0, 10">
                    <Grid
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Text="Theme" />
                        <TextBlock
                            Grid.Row="1"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Select which app theme to display." />
                    </Grid>
                    <TextBlock
                        x:Name="TextBlockThemeSelection"
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True" />
                </RelativePanel>
            </Expander.Header>
        </Expander>
        <Expander
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left">
            <Expander.Content>
                <StackPanel>
                    <RadioButton Content="English" />
                    <RadioButton Content="简体中文" />
                </StackPanel>
            </Expander.Content>
            <Expander.Header>
                <RelativePanel Padding="0, 10">
                    <Grid
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"
                        RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Text="Language" />
                        <TextBlock
                            Grid.Row="1"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="Change the app language." />
                    </Grid>
                    <TextBlock
                        x:Name="TextBlockLanguageSelection"
                        Text="Temp"
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True" />
                </RelativePanel>
            </Expander.Header>
        </Expander>
        <!-- ReSharper disable Xaml.StaticResourceNotResolved -->
        <RelativePanel
            Background="{StaticResource ExpanderHeaderBackground}"
            BorderBrush="{StaticResource ExpanderHeaderBorderBrush}"
            BorderThickness="{StaticResource ExpanderHeaderBorderThickness}"
            CornerRadius="4"
            Grid.Row="2"
            MinHeight="{StaticResource ExpanderMinHeight}"
            Padding="16, 10, 60, 10">
            <!-- ReSharper restore Xaml.StaticResourceNotResolved -->
            <Grid
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True"
                RowSpacing="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Text="Run at Windows startup" />
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Description?" />
            </Grid>
            <ToggleSwitch
                FlowDirection="RightToLeft"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True" />
        </RelativePanel>
    </Grid>
</Page>