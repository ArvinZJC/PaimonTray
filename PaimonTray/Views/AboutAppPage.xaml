<Page
    mc:Ignorable="d"
    x:Class="PaimonTray.Views.AboutAppPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:am="using:Windows.ApplicationModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="using:PaimonTray.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowSpacing="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <Image
                Height="96"
                Margin="0, 0, 18, 0"
                Source="{x:Bind h:AppConstantsHelper.AppIconImagePath}"
                Width="96" />
            <TextBlock
                FontWeight="SemiBold"
                FontSize="48"
                Text="{x:Bind am:Package.Current.DisplayName}"
                VerticalAlignment="Center" />
        </StackPanel>
        <TextBlock
            x:Name="TextBlockVersion"
            Grid.Row="1" />
        <TextBlock
            x:Name="TextBlockCopyright"
            Grid.Row="2" />
        <HyperlinkButton
            Content="License"
            Grid.Row="3"
            NavigateUri="{x:Bind h:AppConstantsHelper.GitHubRepoLicenseUrl}"/>
        <StackPanel Grid.Row="4">
            <HyperlinkButton
                x:Name="HyperlinkButtonHome"
                IsEnabled="False" />
            <HyperlinkButton
                Content="User manual"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel Grid.Row="5">
            <HyperlinkButton
                Content="GitHub repository"
                NavigateUri="{x:Bind h:AppConstantsHelper.GitHubRepoUrl}" />
            <HyperlinkButton
                Content="Gitee repository (backup)"
                IsEnabled="False" />
            <HyperlinkButton
                Content="View issues"
                NavigateUri="{x:Bind h:AppConstantsHelper.GitHubRepoIssuesUrl}" />
            <HyperlinkButton
                Content="Release notes"
                NavigateUri="{x:Bind h:AppConstantsHelper.GitHubRepoReleasesUrl}" />
        </StackPanel>
    </Grid>
</Page>